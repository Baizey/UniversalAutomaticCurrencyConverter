{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "allowJs": true,
    "jsx": "react"
  },
  "include": [
    "./src/components/**/*",
    "./src/currencyConverter/**/*",
    "./src/infrastructure/**/*"
  ]
}