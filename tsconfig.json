{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./build/unpacked",
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ES2017",
    "allowJs": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "include": [
    "./src/components/**/*",
    "./src/currencyConverter/**/*",
    "./src/infrastructure/**/*"
  ]
}