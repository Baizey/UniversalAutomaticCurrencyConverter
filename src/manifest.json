{
  "manifest_version": 2,
  "name": "Universal Automatic Currency Converter",
  "short_name": "UA Currency Converter",
  "version": "3.1.0",
  "description": "Your new currency converter.",
  "author": "Baizey",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "UA Currency Converter",
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    "html/rowConverter.html",
    "html/localizationAlert.html",
    "html/contextMenu.html",
    "html/selectedMenu.html"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "XRegExp.js",
        "RegExpWrapper.js",

        "Utils.js",
        "Timer.js",
        "Browser.js",
        "Localizations.js",
        "Configuration.js",

        "SiteAllowance.js",
        "CurrencyAmount.js",
        "CurrencyRate.js",
        "CurrencyElement.js",

        "ActiveLocalization.js",
        "Currencies.js",
        "Detector.js",
        "Engine.js",

        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "all_frames": false
    }
  ],
  "background": {
    "scripts": [
      "Browser.js",
      "background.js"
    ],
    "persistent": true
  },

  "options_page": "options/options.html",
  "options_ui": {
    "page": "options/options.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{c1ae7a88-3721-459c-9f55-c527123c1859}",
      "strict_min_version": "57.0"
    }
  },

  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "tabs"
  ]
}